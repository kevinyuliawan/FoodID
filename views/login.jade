extends layout

block content
  h3 Login
  if error
    h4
      span(style="color:red") Your supplied information is incorrect. Please try again.
  if logout
    h4
      span(style="color:#5990BF") You have successfully logged out.

  <form action="/login" method="post" data-ajax="true">
  <div data-role="fieldcontain" >
  <input type="text" name="email" id="email" value="" placeholder="E-mail or phone" />
  </div>

  <div data-role="fieldcontain">
  <input type="password" name="password" id="password" value="" placeholder="Password" />
  </div>

  <!-- <label><input type="checkbox" name="checkbox-remember" />Remember me?</label> -->
  <!-- <input type="reset" value="Clear" data-icon="delete" /> -->
  <input type="submit" value="Log In" data-icon="check" data-theme="b" />
  </form>


  <div data-role="fieldcontain">
  <h3>New to foodID?</h3>
  <a href="/register" data-role="button" data-icon="forward" data-theme="e">Register</a>
  </div>